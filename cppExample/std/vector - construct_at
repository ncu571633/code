#include <memory>
#include <new>
#include <utility>
#include <print>

constexpr size_t DEFAULT_CAPACITY = 2;

template<typename T>
class myVector
{
public:
    myVector()
    : myVector(DEFAULT_CAPACITY)
    {}

    myVector(size_t n)
    {
        _capacity = n;
        _size = 0;
        _data = static_cast<T*>(std::aligned_alloc(alignof(T), _capacity * sizeof(T)));
    }
    
    myVector(size_t n, const T& e)
    {
        _size = _capacity = n;
        _data = static_cast<T*>(std::aligned_alloc(alignof(T), _capacity * sizeof(T)));
        for(size_t i=0; i<n; i++)
            std::construct_at(_data + i, e);
    }
    
    myVector(const myVector& v)
    {
        _size = v._size;
        _capacity = v._capacity;

        if(v._data == nullptr)
            _data = nullptr;
        else
        {
            _data = static_cast<T*>(std::aligned_alloc(alignof(T), _capacity * sizeof(T)));
            for(size_t i=0; i < _size; i++)
                std::construct_at(_data + i, v[i]);
        }
    }
    
    myVector(myVector<T>&& v)
    {
        _capacity = std::exchange(v._capacity, 0);
        _size = std::exchange(v._size, 0);
        _data = std::exchange(v._data, nullptr);
    }

        myVector& operator=(const myVector& other) 
        {
            if (this == &other) 
                return *this;
            
            for (size_t i=0; i < _size; ++i)
                std::destroy_at(_data + i);
                
            if (other._data)
            {
                if (other.size() > _capacity) 
                {
                    std::free(_data);

                    _capacity = other._capacity;
                    _data = static_cast<T*>(std::aligned_alloc(alignof(T), _capacity * sizeof(T)));
                }
                
                _size = other._size;
                for (size_t i=0; i < _size; ++i)
                {
                    std::construct_at(_data + i, other._data[i]);
                }

            }
            else 
            {
                _data = nullptr;
                _size = 0;
            }
            return *this;
        }
        
        constexpr myVector& operator=(myVector&& other) noexcept 
        {
            if (this == &other)
                return *this;
                
            // Clean existing resources
            for (size_t i = 0; i < _size; ++i)
                std::destroy_at(_data + i);
            std::free(_data);
        
             _size = std::exchange(other._size, 0);
            _capacity = std::exchange(other._capacity, 0);
            _data = std::exchange(other._data, nullptr);
            return *this;
        }
	
    ~myVector()
    {
        if (_data)
        {
            for (size_t i = 0; i < _size; ++i)
                std::destroy_at(_data + i);
            std::free(_data);
            _data = nullptr;
        }
        _size = _capacity = 0;
    }

    T& operator[] (size_t i)
    {
        return _data[i];
    }

    const T& operator[] (size_t i) const
    {
        return _data[i];
    }

    // have to use another type, since there could be an conversion
    // vector<string>    push_back("aa");
    template<typename U>
    void push_back(U&& e)
    {
        if(_size < _capacity)
        {
            std::construct_at(_data + _size, std::forward<U>(e));
            _size ++;
        }
        else
        {
            T* temp = static_cast<T*>(std::aligned_alloc(alignof(T), 2 * _capacity * sizeof(T)));
            for(size_t i=0; i<_size; i++)
            {
                std::construct_at(temp + i, std::move(_data[i]));
            }
            
            // Add new element
            std::construct_at(temp + _size, std::forward<U>(e));
        
            std::free(_data);
            _data = temp;
            _size ++;
            _capacity *= 2;
        }           
    }

#if false
    void push_back(const T& e) // Copy version
    {}
#endif

    inline size_t size() const { return _size; }
    
	private:
	    size_t _size = 0;
	    size_t _capacity = 2;
	    T* _data = nullptr;
	};
	
	int main()
	{
	    myVector<std::string> v;
	    v.push_back("h1");
	    std::string s = "h2";
	    v.push_back(s);
	    v.push_back("h3");
	    v.push_back("h4");
	    
	    /*
	    myVector<int> v;
	    v.push_back(1);
	    v.push_back(2);
	    v.push_back(3);
	    v.push_back(4);    */
	    myVector<std::string> v2(v);
	    for(size_t i=0; i<v2.size(); i++)
	        std::print("{} {}\n", i, v2[i]);
	        
	    return 0;
}
